<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:context=".Game">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/result" android:layout_gravity="center_horizontal|top"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="130dp"
                android:layout_height="131dp" android:layout_gravity="center" android:weightSum="1">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Restart"
                    android:id="@+id/restart"
                    android:background="@drawable/yellow_button"
            style="@style/restartNewgame"
                    />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="New Game"
                    android:id="@+id/newgame"
                    android:background="@drawable/green_button"
                    style="@style/restartNewgame"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/newrecord" android:layout_gravity="center_horizontal|bottom"/>
    </FrameLayout>
</LinearLayout>