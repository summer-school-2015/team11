<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" tools:context=".MyActivity"
        >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
            >
        <ListView
                android:layout_width="match_parent"
                android:layout_height="478dp"
                android:id="@+id/list" android:layout_gravity="top"

    />

        <Button
                android:layout_width="117dp"
                android:layout_height="79dp"
                android:text="Reset Scores"
                android:id="@+id/reset" android:layout_gravity="left|bottom"
                android:background="@drawable/red_button"
                style="@style/restartNewgame"/>
        <Button
                android:layout_width="117dp"
                android:layout_height="79dp"
                android:text=""
                android:id="@+id/music" android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/yellow_button"
                style="@style/restartNewgame"/>
        <Button
                android:layout_width="117dp"
                android:layout_height="79dp"
                android:text=""
                android:id="@+id/sound" android:layout_gravity="right|bottom"
                android:background="@drawable/green_button"
                style="@style/restartNewgame"/>
    </FrameLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_gravity="right"/>
</LinearLayout>

