<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:context=".Game"
                >

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal">
        <Button
                android:layout_width="161dp"
                android:layout_height="117dp"
                android:text="Resume"
                android:id="@+id/resume" android:layout_gravity="center"
                android:background="@drawable/red_button"
                style="@style/restartNewgame"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="Game was paused"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/pauseText"
            android:layout_gravity="center_horizontal|top"/>
    </FrameLayout>
</LinearLayout>